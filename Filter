package Calculator;

import java.awt.event.KeyEvent;

public class Filter
{
    private static String statement = "";
    private static StringBuilder statementSb = new StringBuilder(statement);
    private static String result = "";
    private static char keyChar;

    public static void displayInfo(KeyEvent e)
    {
        String finalKey = "";
        char keyChar = e.getKeyChar();
        System.out.print(keyChar);
        finalKey += keyChar;

        if(finalKey.equals("0") || finalKey.equals("1") || finalKey.equals("2") || finalKey.equals("3") ||
                finalKey.equals("4") || finalKey.equals("5") || finalKey.equals("6") || finalKey.equals("7") ||
                finalKey.equals("8") || finalKey.equals("9") || finalKey.equals("+") || finalKey.equals("-") ||
                finalKey.equals("*") || finalKey.equals("/") || finalKey.equals("(") || finalKey.equals(")"))
        {
            addCharacter(finalKey);
        }
        else if(e.getKeyChar() == KeyEvent.VK_ENTER)
        {
            result += statementSb;
            Converter converter = new Converter(Filter.getResult());
            Calculator calculator = new Calculator(Converter.getResult());
            System.out.println(Calculator.getResult());

            System.out.println("FilterResult(): " + Filter.getResult());
            System.out.println("ConverterResult(): " + Converter.getResult());
            System.out.println("CalculatorResult(): " + Calculator.getResult());
        }
    }

    private static void addCharacter(String a) {statementSb.append(a).toString();}

    public static String getResult() {return result;}

    private static void isEnter()
    {
        if(keyChar == KeyEvent.VK_ENTER)
        {

        }
    }
}
